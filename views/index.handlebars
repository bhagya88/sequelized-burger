			<div class="col s6 offset-s1">
				<div class="row green-text"><h5>Burgers ready to be devoured</h5></div>

				{{#each burgersToBeDevoured}}
					<div class="row white valign-wrapper">
						
						<div class="col s6  valign-wrapper"><p class="valign">{{id}}. {{burger_name}}</p></div>

						<form action="/?_method=PUT" method="POST">
							<div class="col s2" >
								<p><i>Drink</i></p>
							</div>
							<div class="col s4 valign-wrapper" >
								<input type="text" id="drink" name="drink_name" class="input-field valign">
							</div>
							<div class="col s1 valign-wrapper" >
								<p>
								<button name="id" class="valign" value={{id}}>Devour</button>
								</p>
							</div>
						</form>
					</div>
				{{/each}}

			</div>

			<!-- burgers devoured -->
			<div class="col s4 offset-s1">
				<div class="row red-text"><h5>Devoured Burgers</h5></div>
				{{#each burgersDevoured}}
				<div class="row">
					<p>{{id}}. {{burger_name}} 
					{{#each drinks}}
						<i class="green-text">devoured with drink </i> {{drink_name}}
					{{/each}}
					</p>
				</div>
				{{/each}}
			</div>
		</div>



